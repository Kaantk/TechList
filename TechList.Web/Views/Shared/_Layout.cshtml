<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TechList</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/TechList.Web.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

	<header id="header" class="w-full d-flex justify-content-center border-bottom bg-white">
		<nav class="w-75 py-2" style="max-width: 1280px" ">
			<div class="w-full d-flex justify-content-between align-items-center">
                <h3 class="m-0 text-primary">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-primary">TechList</a>
                </h3>
				<span class="fw-semibold text-opacity-75" style="font-size: 14px">Demirbaş Takip Sistemi</span>
			</div>
		</nav>
	</header>

	<main id="main" class="w-full d-flex justify-content-center py-4">
		<div style="max-width:1280px" class="w-75">
		    @RenderBody()
		</div>
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
			@await RenderSectionAsync("Scripts", required: false)
</body>
</html>